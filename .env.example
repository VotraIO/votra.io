# Application Configuration
APP_NAME=Votra.io API
DEBUG=False
ENVIRONMENT=development

# Security
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-replace-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
# PostgreSQL example
DATABASE_URL=postgresql://user:password@localhost:5432/votra_db
# SQLite example
# DATABASE_URL=sqlite:///./votra.db

# CORS Settings
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOW_CREDENTIALS=True

# API Settings
API_V1_PREFIX=/api/v1
MAX_REQUEST_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (if using)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@votra.io

# Redis Configuration (if using)
# REDIS_URL=redis://localhost:6379/0

# AWS Configuration (if using)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# Logging
LOG_LEVEL=INFO

# External API Keys (examples)
# STRIPE_API_KEY=sk_test_...
# SENDGRID_API_KEY=SG...
# GOOGLE_API_KEY=AIza...

# Feature Flags
# ENABLE_FEATURE_X=False
